pipeline {
  agent none

  options {
    timestamps()
    timeout(time: 20, unit: 'MINUTES')
    disableConcurrentBuilds()
  }

  environment {
    APP_NAME  = "prod-app"
    IMAGE_TAG = "${BUILD_NUMBER}"
  }

  stages {

    stage('Checkout') {
      agent any
      steps {
        checkout scm
      }
    }

    stage('Install Dependencies & Tests') {
      agent {
        docker {
          image 'node:18-alpine'
        }
      }
      steps {
        sh '''
          cd app
          node -v
          npm -v
          npm ci
          npm test
        '''
      }
    }

    stage('Docker Build') {
      agent {
        docker {
          image 'docker:25'
          args '-u root:root -v /var/run/docker.sock:/var/run/docker.sock'
        }
      }
      steps {
        sh '''
          docker version
          docker build -t ${APP_NAME}:${IMAGE_TAG} -f app/Dockerfile app
        '''
      }
    }

    /* ðŸ‘‡ THIS IS THE ONLY NEW PART */
    stage('Main Branch Check') {
      when {
        branch 'main'
      }
      steps {
        echo "This is MAIN branch â€“ safe to deploy later"
      }
    }
  }

  post {
    success {
      echo "Pipeline completed successfully for ${env.BRANCH_NAME}"
    }
    failure {
      echo "Pipeline failed for ${env.BRANCH_NAME}"
    }
  }
}

