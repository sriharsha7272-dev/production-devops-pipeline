pipeline {
    agent any

    options {
        timestamps()
        disableConcurrentBuilds()
    }

    environment {
        APP_NAME    = "prod-devops-app"
        IMAGE_REPO  = "yourdockerhubusername/prod-devops-app"
        COMMIT_SHA = "${env.GIT_COMMIT.take(7)}"
        NODE_ENV   = "test"
    }

    stages {

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Static Validation') {
            steps {
                sh '''
                  test -f app/Dockerfile
                  test -f app/package.json
                  test -f app/package-lock.json
                '''
            }
        }

        stage('Install Dependencies') {
            steps {
                dir('app') {
                    sh 'npm ci'
                }
            }
        }

        stage('Unit Tests') {
            steps {
                dir('app') {
                    sh 'npm test'
                }
            }
        }

        stage('Integration Tests') {
            when {
                branch 'dev'
            }
            steps {
                dir('app') {
                    sh 'npm run test:integration'
                }
            }
        }

        stage('Build Docker Image') {
            when {
                anyOf {
                    branch 'dev'
                    branch 'main'
                }
            }
            steps {
                sh '''
                  docker build \
                    -t $IMAGE_REPO:$COMMIT_SHA \
                    -f app/Dockerfile app
                '''
            }
        }

        stage('Push Docker Image (main only)') {
            when {
                branch 'main'
            }
            steps {
                withCredentials([usernamePassword(
                    credentialsId: 'dockerhub-creds',
                    usernameVariable: 'DOCKER_USER',
                    passwordVariable: 'DOCKER_PASS'
                )]) {
                    sh '''
                      echo "$DOCKER_PASS" | docker login -u "$DOCKER_USER" --password-stdin
                      docker push $IMAGE_REPO:$COMMIT_SHA
                    '''
                }
            }
        }
    }

    post {
        success {
            echo "Pipeline succeeded for ${env.BRANCH_NAME}"
            echo "Image: $IMAGE_REPO:$COMMIT_SHA"
        }

        failure {
            echo "Pipeline failed â€” build blocked"
        }

        cleanup {
            sh 'docker system prune -f || true'
        }
    }
}

